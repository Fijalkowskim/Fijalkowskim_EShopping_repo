   <Label text="EShopping">
      <font>
         <Font size="54.0" />
      </font>
   </Label>
   <Label id="cash" fx:id="cash" text="Cash:">
      <font>
         <Font size="22.0" />
      </font>
   </Label>
   <HBox prefHeight="305.0" prefWidth="748.0">
      <children>
         <Button id="PreviousButton" mnemonicParsing="false" onAction="#previousButtonClick" prefHeight="478.0" prefWidth="52.0" text="&lt;" />
         <SplitPane dividerPositions="0.29797979797979796" prefHeight="100.0" prefWidth="644.0">
           <items>
               <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                  <children>
                     <Label id="itemName" fx:id="itemName" text="Item name">
                        <font>
                           <Font size="25.0" />
                        </font>
                     </Label>
                     <Label id="itemDescription" fx:id="itemDescription" text="Item description">
                        <font>
                           <Font size="14.0" />
