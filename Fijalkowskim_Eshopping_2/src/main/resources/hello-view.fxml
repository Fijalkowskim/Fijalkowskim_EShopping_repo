               </AnchorPane>
           </items>
         </SplitPane>
         <Button id="NextButton" mnemonicParsing="false" onAction="#nextButtonClick" prefHeight="337.0" prefWidth="52.0" text="&gt;" />
      </children>
   </HBox>
   <Button id="buyButton" fx:id="buyButton" mnemonicParsing="false" onAction="#buyButtonClick" text="BUY">
      <font>
         <Font size="23.0" />
      </font>
   </Button>
   <Label id="infoLabel" fx:id="infoLabel" text="Errors" textFill="#0055ff">
      <font>
         <Font size="17.0" />
      </font>
   </Label>
