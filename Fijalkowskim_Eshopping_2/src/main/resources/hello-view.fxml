                     </Label>
                     <Label id="itemPrice" fx:id="itemPrice" text="price">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                     <Label id="itemAmount" fx:id="itemAmount" layoutX="10.0" layoutY="66.0" text="Amount">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="97.0" prefWidth="151.0">
                  <children>
                     <ImageView id="itemImage" fx:id="itemImage" fitHeight="291.0" fitWidth="447.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true" />
